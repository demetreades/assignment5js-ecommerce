{
  "name": "ecommerce-mern",
  "version": "0.1.0",
  "description": "ecommerce fullstack application with MERN stack",
  "homepage": "https://github.com/demetreades/ecommerce-mern#readme",
  "bugs": {
    "url": "https://github.com/demetreades/ecommerce-mern/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/demetreades/ecommerce-mern.git"
  },
  "license": "ISC",
  "author": "trainero",
  "main": "server/src/server.js",
  "scripts": {
    "start": "node server/src/server",
    "server": "nodemon server/src/server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "DATA:import": "node server/src/config/database/seeds",
    "DATA:delete": "node server/src/config/database/seeds -d",
    "fresh": "rm -rf node_modules && npm install && cd ./client && rm -rf node_modules && npm install && npm audit fix && cd .."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.5",
    "morgan": "^1.10.0",
    "pino": "^6.13.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.12",
    "pino-pretty": "^6.0.0",
    "prettier": "^2.3.2",
    "prettier-eslint": "^13.0.0",
    "prettier-plugin-packagejson": "^2.2.11"
  }
}
